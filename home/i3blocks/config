# Guess the weather hourly
[weather]
command=curl -Ss 'https://wttr.in/paris?0&T&Q&lang=fr' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

# Update time every 5 seconds
[time]
command=date +"%Y/%m/%d %T"
interval=1

